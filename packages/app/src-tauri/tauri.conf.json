{
  "build": {
    "beforeDevCommand": "pnpm vite",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "productName": "zen.read",
  "version": "0.0.0",
  "identifier": "com.zen.read",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "zen.read",
        "width": 800,
        "height": 600,
        "hiddenTitle": true,
        "resizable": true,
        "alwaysOnTop": false
      }
    ]
  }
}